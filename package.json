{
  "name": "hd-derivations",
  "version": "1.0.0-beta.8",
  "description": "",
  "main": "./build/node/index.js",
  "browser": "./build/browser/index.js",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": "./build/node/index.js",
      "types": "./build/node/index.d.ts"
    },
    "./browser": {
      "import": "./build/browser/index.js",
      "types": "./build/browser/index.d.ts"
    },
    "./node": {
      "import": "./build/node/index.js",
      "types": "./build/node/index.d.ts"
    }
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "test": "vitest --coverage",
    "build": "npm run build:browser && npm run build:node",
    "build:browser": "vite build",
    "build:node": "tsc --project ./tsconfig.build.json && npx tsc-alias --project ./tsconfig.build.json",
    "publish:package": "tsx ./publish-package.ts",
    "build:graph": "npx madge src/ --ts-config ./tsconfig.json --warning --extensions ts,tsx --image dependency-graph.svg",
    "lint:prettify": "prettier ./ --write \"**/*.{ts,json,md}\"",
    "lint:type": "npx tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run build:graph"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/bchaddrjs": "^0.4.3",
    "@types/tiny-secp256k1": "^2.0.1",
    "@vitest/coverage-istanbul": "^2.1.8",
