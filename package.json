    "prettier": "^3.4.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-wasm": "^3.4.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.33.2",
    "@binance-chain/javascript-sdk": "^4.2.2",
    "@emurgo/cardano-serialization-lib-browser": "^14.0.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^14.0.0",
    "@mysten/sui": "^1.20.0",
    "@noble/curves": "^1.8.1",
    "@noble/hashes": "^1.7.1",
    "@polkadot/util-crypto": "^13.3.1",
    "@scure/bip32": "^1.6.2",
