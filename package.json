    "@scure/bip32": "1.6.2",
    "@ton/core": "0.62.0",
    "@ton/crypto": "3.3.0",
    "@ton/ton": "16.1.0",
    "bchaddrjs": "0.5.2",
    "bech32": "2.0.0",
    "bip32": "5.0.0-rc.0",
    "bip39": "3.1.0",
    "bitcoinjs-lib": "7.0.0-rc.0",
    "bs58": "6.0.0",
