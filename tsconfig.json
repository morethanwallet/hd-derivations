{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
